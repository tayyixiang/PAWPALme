@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Nav

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">PawPal</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="pets">
                <span class="bi bi-search-nav-menu" aria-hidden="true"></span> Browse Pets
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="shelters">
                <span class="bi bi-shop-window-nav-menu" aria-hidden="true"></span> Our Shelters
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="my-appointments">
                        <span class="bi bi-calendar-check-nav-menu" aria-hidden="true"></span> Appointments
                    </NavLink>
                </div>

                <AuthorizeView Roles="Shelter" Context="innerContext">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="shelter/dashboard">
                            <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span> Dashboard
                        </NavLink>
                    </div>
                </AuthorizeView>

                <div class="nav-item px-3 mt-4">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="" />
                        <button type="submit" class="nav-link btn btn-link text-start text-danger" style="width:100%">
                            <span class="bi bi-box-arrow-left-nav-menu" aria-hidden="true"></span> Log Out
                        </button>
                    </form>
                </div>

            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3 mt-4">
                    <NavLink class="nav-link" href="auth">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Log In / Sign Up
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;
}