@implements IDisposable
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">PAWPALme</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="pets">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Browse Pets
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="shelters">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Shelters
            </NavLink>
        </div>

        <AuthorizeView Roles="Admin">
            <div class="nav-item px-3 mt-3">
                <span class="text-white-50 small text-uppercase fw-bold">Admin Dashboard</span>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/pets">
                    <span class="bi bi-gear-fill-nav-menu" aria-hidden="true"></span> Manage Pets
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/shelters">
                    <span class="bi bi-house-gear-fill-nav-menu" aria-hidden="true"></span> Manage Shelters
                </NavLink>
            </div>

            <div class="nav-item px-3 mt-3">
                <hr class="text-white-50" />
            </div>
        </AuthorizeView>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@authUrl">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login / Sign up
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private string? currentUrl;
    private string authUrl = "/auth?mode=login&type=adopter";

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}




