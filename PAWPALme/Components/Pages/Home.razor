@page "/"
@using PAWPALme.Models
@using PAWPALme.Repositories
@using PAWPALme.Enums
@using Microsoft.AspNetCore.Components.Authorization
@inject IPetRepository PetRepo
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Home | PawPal</PageTitle>

@* --- HERO SECTION --- 
   This is the "Billboard" of the website. 
   I used an inline style for the background image with a linear-gradient overlay
   to ensure the white text remains readable regardless of the image brightness.
*@
<div class="hero-section text-center text-white d-flex align-items-center justify-content-center"
     style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1450778869180-41d0601e046e?q=80&w=1600&auto=format&fit=crop'); background-size: cover; background-position: center; min-height: 60vh;">

    <div class="container">
        <h1 class="display-3 fw-bold mb-3">Find Your New Best Friend</h1>
        <p class="lead mb-4">Connecting loving homes with pets in need. Adopt, don't shop.</p>

        <div class="d-flex justify-content-center gap-3">
            @* Primary Call to Action for everyone *@
            <a href="pets" class="btn btn-primary btn-lg rounded-pill px-5 fw-bold">Browse Pets</a>

            @* CONDITIONAL BUTTON:
               This button ONLY appears if the logged-in user is a Shelter.
               Regular adopters will just see the "Browse Pets" button centered.
            *@
            <AuthorizeView Roles="Shelter">
                <a href="shelter/dashboard" class="btn btn-outline-light btn-lg rounded-pill px-5 fw-bold">Shelter Dashboard</a>
            </AuthorizeView>
        </div>
    </div>
</div>

@* --- FEATURED PETS SECTION --- *@
<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">Featured Pets</h2>
        <p class="text-muted">Meet some of our newest arrivals looking for a home.</p>
    </div>

    @* LOADING STATE: 
       Essential for good UX. Prevents the user from seeing a broken/empty layout 
       while the database query is running in the background.
    *@
    @if (_featuredPets == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var pet in _featuredPets)
            {
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-hover rounded-4 overflow-hidden">
                        @* IMAGE HANDLING:
                           Uses the null-coalescing operator (??) to provide a fallback image
                           if the pet doesn't have one yet.
                        *@
                        <img src="@(pet.ImageUrl ?? "/images/pet-placeholder.png")"
                             class="card-img-top"
                             style="height: 250px; object-fit: cover;"
                             alt="@pet.Name">

                        <div class="card-body text-center p-4">
                            <h5 class="fw-bold text-primary">@pet.Name</h5>
                            <p class="text-muted">@pet.Breed • @pet.Age yrs</p>

                            @* NAVIGATION LINK:
                               Points to the detailed profile page. 
                               Note the plural 'pets/' matches the @page instruction in PetDetails.razor.
                            *@
                            <a href="pets/@pet.Id" class="btn btn-outline-primary rounded-pill w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-5">
        <a href="pets" class="btn btn-link text-decoration-none fw-bold fs-5">View All Pets <i class="bi bi-arrow-right"></i></a>
    </div>
</div>

@code {
    private IEnumerable<Pet>? _featuredPets;

    protected override async Task OnInitializedAsync()
    {
        // LOGIC: FETCH & FILTER
        // 1. Get all data from the repository.
        var allPets = await PetRepo.GetAllAsync();

        // 2. LINQ Query:
        //    - Filter: Only show pets that are currently 'Available' (ignore adopted ones).
        //    - Sort: Order by ID Descending (highest ID = newest pet added).
        //    - Limit: Take only the top 3 results for the homepage display.
        _featuredPets = allPets
            .Where(p => p.Status == PetStatus.Available)
            .OrderByDescending(p => p.Id)
            .Take(3);
    }
}