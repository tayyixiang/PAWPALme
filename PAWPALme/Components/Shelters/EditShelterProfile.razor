@page "/shelter/edit-profile"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using PAWPALme.Models
@using PAWPALme.Repositories
@using PAWPALme.Services
@attribute [Authorize(Roles = "Shelter")]
@inject IShelterRepository ShelterRepo
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthStateProvider
@inject IFileService FileService
@inject NavigationManager Nav

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Edit Shelter Profile</h3>
                </div>
                <div class="card-body">
                    @if (ShelterModel == null)
                    {
                        <div class="spinner-border text-primary"></div>
                    }
                    else
                    {
                        <EditForm Model="ShelterModel" OnValidSubmit="SaveProfile" FormName="edit-shelter-profile">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger" />

                            <div class="text-center mb-4">
                                <div class="mb-3 d-flex align-items-center justify-content-center bg-light rounded" style="height: 200px; overflow: hidden;">
                                    @if (!string.IsNullOrEmpty(ShelterModel.ImageUrl))
                                    {
                                        <img src="@ShelterModel.ImageUrl" class="img-fluid" style="max-height: 100%;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted"><i class="bi bi-building fs-1"></i><br>No Logo</span>
                                    }
                                </div>
                                <label class="btn btn-outline-primary">
                                    <i class="bi bi-upload"></i> Upload Logo
                                    <InputFile OnChange="HandleFileSelected" style="display: none;" accept=".jpg,.png,.jpeg" />
                                </label>
                                @if (isUploading)
                                {
                                    <span class="ms-2 text-muted small">Uploading...</span>
                                }
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Shelter Name</label>
                                <InputText @bind-Value="ShelterModel.Name" class="form-control" />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Phone</label>
                                    <InputText @bind-Value="ShelterModel.Phone" class="form-control" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Address (Google Maps Link)</label>
                                    <InputText @bind-Value="ShelterModel.Address" class="form-control" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Description / About Us</label>
                                <InputTextArea @bind-Value="ShelterModel.Description" class="form-control" rows="5" placeholder="Tell adopters about your mission..." />
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                                <a href="shelter/dashboard" class="btn btn-link">Cancel</a>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private Shelter ShelterModel { get; set; } = new();

    private ApplicationUser? currentUser;
    private bool isUploading = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        currentUser = await UserManager.GetUserAsync(authState.User);

        // Load existing data only if this isn't a postback (Form Submit)
        if (currentUser?.ShelterId != null && ShelterModel.Id == 0)
        {
            var existing = await ShelterRepo.GetByIdAsync(currentUser.ShelterId.Value);
            if (existing != null)
            {
                ShelterModel = existing;
            }
        }
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        isUploading = true;
        try
        {
            // Re-use the FileService we built for Pets!
            var path = await FileService.UploadFileAsync(e.File, "shelters");
            ShelterModel.ImageUrl = path;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        isUploading = false;
    }

    private async Task SaveProfile()
    {
        if (currentUser?.ShelterId == null) return;

        // Security check: Ensure we are updating OUR shelter
        if (ShelterModel.Id == currentUser.ShelterId.Value)
        {
            await ShelterRepo.UpdateAsync(ShelterModel);
            Nav.NavigateTo("shelter/dashboard");
        }
    }
}