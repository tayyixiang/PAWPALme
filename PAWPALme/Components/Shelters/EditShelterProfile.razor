@page "/shelter/settings"
@using PAWPALme.Models
@using PAWPALme.Repositories
@using PAWPALme.Services
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@inject AuthenticationStateProvider AuthStateProvider
@inject IShelterRepository ShelterRepo
@inject IFileService FileService
@inject NavigationManager Nav

@* SECURITY: Restricted to Shelters only. Adopters cannot edit shelter profiles. *@
@attribute [Authorize(Roles = "Shelter")]

<PageTitle>Settings | PawPal</PageTitle>

<div class="container py-4">
    <div class="text-center mb-5">
        <h3 class="fw-bold text-dark">Settings</h3>
        <p class="text-muted">Manage your profile and account security.</p>
    </div>

    <div class="glass-card mb-5 p-5">
        <div class="d-flex align-items-center mb-4">
            <div class="icon-circle bg-blue-soft text-primary me-3">
                <i class="bi bi-person-lines-fill"></i>
            </div>
            <h4 class="fw-bold mb-0">Shelter Profile</h4>
        </div>

        @* ERROR HANDLING:
           Displays upload errors (e.g., "File too large") directly to the user.
        *@
        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger">@_errorMessage</div>
        }

        <EditForm Model="Input" OnValidSubmit="SaveProfile" FormName="shelter-profile">
            <DataAnnotationsValidator />

            <div class="row g-4">
                @* --- IMAGE UPLOAD SECTION --- *@
                <div class="col-12 text-center mb-4">
                    <div class="position-relative d-inline-block">
                        @* PREVIEW:
                           Shows the current image if available, or a placeholder if not.
                        *@
                        <img src="@(Input.ImageUrl ?? "/images/pet-placeholder.png")"
                             class="rounded-circle shadow-sm border"
                             style="width: 150px; height: 150px; object-fit: cover;" />

                        @* UPLOAD BUTTON:
                           We wrap the <InputFile> in a <label> styled as a button.
                           The <InputFile> itself is hidden (class="d-none"), but clicking the label triggers it.
                           This is a common CSS trick to make ugly file inputs look pretty.
                        *@
                        <label class="btn btn-sm btn-primary rounded-circle position-absolute bottom-0 end-0 mb-2 me-2"
                               style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center; cursor: pointer;">
                            <i class="bi bi-camera-fill"></i>
                            <InputFile OnChange="HandleImageUpload" class="d-none" accept=".jpg,.jpeg,.png" />
                        </label>
                    </div>
                    <div class="mt-2 text-muted small">Allowed: JPG, PNG (Max 5MB)</div>
                </div>

                @* --- TEXT FIELDS --- *@
                <div class="col-md-12">
                    <label class="ms-3 mb-2 small fw-bold text-muted">Shelter Name</label>
                    <div class="input-group-custom">
                        <i class="bi bi-shop input-icon"></i>
                        <InputText @bind-Value="Input.Name" class="form-input" placeholder="Organization Name" />
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="ms-3 mb-2 small fw-bold text-muted">Phone Number</label>
                    <div class="input-group-custom">
                        <i class="bi bi-telephone input-icon"></i>
                        <InputText @bind-Value="Input.Phone" class="form-input" placeholder="+65..." />
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="ms-3 mb-2 small fw-bold text-muted">Address / Location</label>
                    <div class="input-group-custom">
                        <i class="bi bi-geo-alt input-icon"></i>
                        <InputText @bind-Value="Input.Address" class="form-input" placeholder="Block, Street..." />
                    </div>
                </div>

                <div class="col-12">
                    <label class="ms-3 mb-2 small fw-bold text-muted">About Us</label>
                    <div class="input-group-custom">
                        <i class="bi bi-info-circle input-icon"></i>
                        <InputTextArea @bind-Value="Input.Description" class="form-input" style="height: 120px; padding-top: 1rem;" placeholder="Tell adopters about your mission..." />
                    </div>
                </div>
            </div>

            <div class="mt-4 text-end">
                <button type="submit" class="liquid-btn px-5" style="width: auto;">
                    Save Changes
                </button>
            </div>
        </EditForm>
    </div>

    @* SECURITY UI:
       This section handles sensitive actions like Logging Out.
       It uses a <form> POST request for security (CSRF protection).
    *@
    <div class="glass-card p-5 border-danger-subtle">
        <div class="d-flex align-items-center mb-4">
            <div class="icon-circle bg-red-soft text-danger me-3">
                <i class="bi bi-shield-exclamation"></i>
            </div>
            <h4 class="fw-bold mb-0 text-danger">Account Actions</h4>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4 pb-4 border-bottom border-secondary-subtle">
            <div>
                <h5 class="fw-bold text-dark">Log Out</h5>
                <p class="text-muted small mb-0">Securely end your current session.</p>
            </div>

            <form action="Account/Logout" method="post">
                <AntiforgeryToken />
                <input type="hidden" name="ReturnUrl" value="" />
                <button type="submit" class="btn btn-outline-dark rounded-pill px-4 fw-bold">
                    Log Out
                </button>
            </form>
        </div>
    </div>
</div>

@code {
    // FORM MODEL: Holds the input data separate from the Database Entity
    [SupplyParameterFromForm]
    private ShelterInput Input { get; set; } = new();

    private Shelter? _shelter;
    private string _errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        // 1. LOAD DATA:
        // We find the currently logged-in user and then find their associated Shelter profile.
        if (_shelter == null)
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirst(c => c.Type == ClaimTypes.NameIdentifier)?.Value;

            var shelters = await ShelterRepo.GetAllAsync();
            _shelter = shelters.FirstOrDefault(s => s.OwnerUserId == userId);

            // 2. MAP TO FORM:
            // We copy the database values into the Input form so the user can edit them.
            if (_shelter != null)
            {
                Input.Name = _shelter.Name;
                Input.Address = _shelter.Address;
                Input.Phone = _shelter.Phone;
                Input.Description = _shelter.Description;
                Input.ImageUrl = _shelter.ImageUrl;
            }
        }
    }

    // UPLOAD LOGIC:
    // Handles the file selection event.
    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        _errorMessage = ""; // Reset error state
        var file = e.File;
        if (file != null)
        {
            // DELEGATION:
            // We pass the file to FileService. It handles:
            // 1. Creating the folder if it's missing.
            // 2. Generating a unique filename (Guid).
            // 3. Streaming the data safely.
            var imageUrl = await FileService.UploadFileAsync(file, "shelters");

            if (imageUrl != null)
            {
                Input.ImageUrl = imageUrl; // Success: Update the preview
            }
            else
            {
                _errorMessage = "Upload failed. Please ensure the file is an image under 5MB.";
            }
        }
    }

    // SAVE LOGIC:
    private async Task SaveProfile()
    {
        if (_shelter != null)
        {
            // 1. UPDATE ENTITY: Copy form values back to the database object
            _shelter.Name = Input.Name;
            _shelter.Address = Input.Address;
            _shelter.Phone = Input.Phone;
            _shelter.Description = Input.Description;
            _shelter.ImageUrl = Input.ImageUrl;

            // 2. SAVE TO DB
            await ShelterRepo.UpdateAsync(_shelter);

            // 3. REDIRECT: Go back to dashboard
            Nav.NavigateTo("shelter/dashboard");
        }
    }

    public class ShelterInput
    {
        [Required]
        public string Name { get; set; } = "";

        [Required]
        public string Address { get; set; } = "";

        [Required]
        public string Phone { get; set; } = "";

        public string? Description { get; set; }

        public string? ImageUrl { get; set; }
    }
}