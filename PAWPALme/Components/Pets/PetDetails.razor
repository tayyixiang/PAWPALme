@page "/pet/{Id:int}"
@using PAWPALme.Models
@using PAWPALme.Repositories
@inject IPetRepository PetRepo
@inject NavigationManager Nav

<PageTitle>@(pet?.Name ?? "Pet Details")</PageTitle>

<div class="container mt-5">
    @if (pet == null)
    {
        <div class="alert alert-warning">Pet not found.</div>
    }
    else
    {
        <div class="row">
            @* --- LEFT COLUMN: IMAGE --- *@
            <div class="col-md-6 mb-4">
                <div class="bg-light rounded d-flex align-items-center justify-content-center overflow-hidden shadow-sm" style="height: 400px;">
                    @if (!string.IsNullOrEmpty(pet.ImageUrl))
                    {
                        <img src="@pet.ImageUrl" class="w-100 h-100" style="object-fit: cover;" alt="@pet.Name">
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="bi bi-camera fs-1"></i>
                            <p>No Image Available</p>
                        </div>
                    }
                </div>
            </div>

            @* --- RIGHT COLUMN: INFO --- *@
            <div class="col-md-6">
                <h1 class="display-4 fw-bold text-primary">@pet.Name</h1>
                <p class="lead text-muted">
                    @pet.Breed • @pet.Age years old • @pet.Gender • @pet.Size
                </p>
                <hr />

                <h5 class="mt-4">About @pet.Name</h5>
                <p class="fs-5">@(string.IsNullOrEmpty(pet.Description) ? "No description provided." : pet.Description)</p>

                @* --- SHELTER INFO BOX --- *@
                <div class="card mt-5 bg-light border-0">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <small class="text-muted text-uppercase fw-bold">Currently at</small>
                                <h5 class="mb-0">
                                    <i class="bi bi-house-heart-fill text-danger"></i>
                                    @* Link back to shelter details *@
                                    <a href="shelter/@pet.ShelterId" class="text-decoration-none text-dark">
                                        @(pet.Shelter?.Name ?? "Unknown Shelter")
                                    </a>
                                </h5>
                            </div>

                            @* --- THE FIXED BUTTON --- *@
                            <AuthorizeView>
                                <Authorized>
                                    @* FIX: Navigates to the Application Page *@
                                    <a href="book-appointment/@pet.Id" class="btn btn-primary btn-lg">
                                        Request to Adopt
                                    </a>
                                </Authorized>
                                <NotAuthorized>
                                    <a href="Account/Login?ReturnUrl=/book-appointment/@pet.Id" class="btn btn-secondary btn-lg">
                                        Log in to Adopt
                                    </a>
                                </NotAuthorized>
                            </AuthorizeView>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private Pet? pet;

    protected override async Task OnInitializedAsync()
    {
        pet = await PetRepo.GetByIdAsync(Id);
    }
}