@page "/pets/{Id:int}"
@using PAWPALme.Models
@using PAWPALme.Repositories
@using PAWPALme.Enums
@using Microsoft.AspNetCore.Components.Authorization
@inject IPetRepository PetRepo
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

@* DYNAMIC TITLE: 
   The browser tab title changes based on the pet's name.
   This is good for SEO and user experience.
*@
<PageTitle>@(pet?.Name ?? "Pet Details")</PageTitle>

<div class="container mt-5 mb-5">
    @* LOADING / NOT FOUND HANDLING *@
    @if (pet == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="pet-hero">
                    <div class="row g-0">
                        @* IMAGE SECTION (LEFT) *@
                        <div class="col-md-6">
                            <div class="hero-img-container">
                                @if (!string.IsNullOrEmpty(pet.ImageUrl))
                                {
                                    <img src="@pet.ImageUrl" class="hero-img" alt="@pet.Name" />
                                }
                                else
                                {
                                    @* Fallback UI if no photo exists *@
                                    <div class="text-white text-center">
                                        <i class="bi bi-camera fs-1"></i>
                                        <p>No Image</p>
                                    </div>
                                }
                            </div>
                        </div>

                        @* DETAILS SECTION (RIGHT) *@
                        <div class="col-md-6">
                            <div class="p-4 p-lg-5">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h1 class="display-5 fw-bold text-primary mb-0">@pet.Name</h1>
                                        <span class="badge bg-secondary mb-3">@pet.Breed</span>
                                    </div>
                                    @* STATUS BADGE: Only shown if the pet is already adopted *@
                                    @if (pet.Status == PetStatus.Adopted)
                                    {
                                        <span class="badge bg-success fs-6">Adopted!</span>
                                    }
                                </div>

                                @* ATTRIBUTE GRID: 3-Column Layout for quick stats *@
                                <div class="row g-2 my-4">
                                    <div class="col-4">
                                        <div class="info-badge">
                                            <span class="info-label">Age</span>
                                            <span class="info-value">@pet.Age yrs</span>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="info-badge">
                                            <span class="info-label">Gender</span>
                                            <span class="info-value">@pet.Gender</span>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="info-badge">
                                            <span class="info-label">Size</span>
                                            <span class="info-value">@pet.Size</span>
                                        </div>
                                    </div>
                                </div>

                                <h5 class="fw-bold mt-4">About @pet.Name</h5>
                                <p class="text-muted">
                                    @(string.IsNullOrEmpty(pet.Description) ? "This pet has no description yet." : pet.Description)
                                </p>

                                <hr class="my-4" />

                                @* SHELTER INFO: Shows which specific shelter owns this pet *@
                                @if (pet.Shelter != null)
                                {
                                    <div class="mb-4">
                                        <small class="text-muted text-uppercase">Currently at:</small><br />
                                        <span class="h5 fw-bold text-dark">
                                            <i class="bi bi-house-heart-fill text-danger me-2"></i>@pet.Shelter.Name
                                        </span>
                                    </div>
                                }

                                @* ACTION BUTTON LOGIC:
                                   1. Check if pet is Available.
                                   2. If Available -> Check if user is logged in.
                                      - Logged In? -> Show "Adopt" button (Goes to Booking Page).
                                      - Guest? -> Show "Log in to Adopt" button (Goes to Login, then Booking).
                                   3. Not Available? -> Show disabled "Not Available" button.
                                *@
                                <div class="d-grid">
                                    @if (pet.Status == PetStatus.Available)
                                    {
                                        <AuthorizeView>
                                            <Authorized>
                                                <a href="book-appointment/@pet.Id" class="liquid-btn text-center text-decoration-none">
                                                    Adopt @pet.Name
                                                </a>
                                            </Authorized>
                                            <NotAuthorized>
                                                @* Smart Redirect: Sends user to login, then bounces them back here *@
                                                <a href="auth?mode=login&returnUrl=book-appointment/@pet.Id" class="liquid-btn text-center text-decoration-none">
                                                    Log in to Adopt @pet.Name
                                                </a>
                                            </NotAuthorized>
                                        </AuthorizeView>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-lg" disabled>Not Available</button>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <a href="pets" class="btn btn-link text-decoration-none">
                        <i class="bi bi-arrow-left"></i> Back to all pets
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@code {
    // ROUTE PARAMETER: The ':int' constraint ensures this page only loads for numbers (e.g. /pets/5).
    // If someone types /pets/abc, it returns 404 automatically.
    [Parameter] public int Id { get; set; }

    private Pet? pet;

    protected override async Task OnInitializedAsync()
    {
        // DATA FETCHING:
        // We use the Repository to find the specific pet by ID.
        // If the ID doesn't exist in the database, we redirect the user to the main list to avoid a crash.
        pet = await PetRepo.GetByIdAsync(Id);
        if (pet == null) Nav.NavigateTo("pets");
    }
}