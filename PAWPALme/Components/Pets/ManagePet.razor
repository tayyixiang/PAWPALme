@page "/shelter/pets"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using PAWPALme.Models
@using PAWPALme.Data
@using PAWPALme.Repositories
@using PAWPALme.Enums
@attribute [Authorize(Roles = "Shelter")]
@inject IPetRepository PetRepo
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthStateProvider

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><a href="shelter/dashboard" class="text-decoration-none text-dark"><i class="bi bi-arrow-left"></i></a> Manage My Pets</h2>
        <a href="shelter/pets/edit" class="btn btn-success"><i class="bi bi-plus-lg"></i> Add New Pet</a>
    </div>

    @if (myPets == null)
    {
        <div class="spinner-border text-primary"></div>
    }
    else if (!myPets.Any())
    {
        <div class="alert alert-info">
            You haven't listed any pets yet. <a href="shelter/pets/edit" class="alert-link">Add your first one!</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Breed</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pet in myPets)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(pet.ImageUrl))
                                {
                                    <img src="@pet.ImageUrl" class="rounded-circle" width="50" height="50" style="object-fit:cover" />
                                }
                                else
                                {
                                    <div class="bg-secondary rounded-circle" style="width:50px;height:50px;"></div>
                                }
                            </td>
                            <td><strong>@pet.Name</strong></td>
                            <td>@pet.Breed</td>
                            <td>
                                <span class="badge @(pet.Status == PetStatus.Available ? "bg-success" : "bg-secondary")">
                                    @pet.Status
                                </span>
                            </td>
                            <td>
                                <a href="shelter/pets/edit/@pet.Id" class="btn btn-sm btn-outline-primary me-2">Edit</a>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeletePet(pet.Id)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private IEnumerable<Pet>? myPets;
    private ApplicationUser? currentUser;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated ?? false)
        {
            currentUser = await UserManager.GetUserAsync(user);
            if (currentUser?.ShelterId != null)
            {
                myPets = await PetRepo.GetPetsByShelterIdAsync(currentUser.ShelterId.Value);
            }
        }
    }

    private async Task DeletePet(int id)
    {
        await PetRepo.DeleteAsync(id);
        if (currentUser?.ShelterId != null)
            myPets = await PetRepo.GetPetsByShelterIdAsync(currentUser.ShelterId.Value);
    }
}
