@page "/pets"
@using PAWPALme.Models
@using PAWPALme.Repositories
@using PAWPALme.Enums
@* ARCHITECTURE: No [Authorize] attribute means this page is publicly accessible *@
@inject IPetRepository PetRepo
@inject NavigationManager Nav

<PageTitle>Find a Friend | PawPal</PageTitle>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Find Your Best Friend</h1>
        <p class="lead text-muted">Browse our available pets looking for a forever home.</p>
    </div>

    @* SEARCH UI: Input binding to '_searchTerm' triggers real-time filtering logic *@
    <div class="row mb-4 justify-content-center">
        <div class="col-md-6">
            <div class="input-group input-group-lg shadow-sm">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                <input type="text" class="form-control border-start-0"
                       placeholder="Search by name, breed..."
                       @bind="SearchTerm"
                       @bind:event="oninput" />
                @* EVENT BINDING: 'oninput' ensures filtering happens on every keystroke, not just on blur *@
            </div>
        </div>
    </div>

    @if (_filteredPets == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else if (!_filteredPets.Any())
    {
        <div class="text-center py-5">
            <img src="/images/empty-state.svg" width="200" class="mb-3 opacity-50" />
            <h4 class="text-muted">No pets found matching your search.</h4>
        </div>
    }
    else
    {
        <div class="row g-4">
            @* RENDERING: Loop through the FILTERED list, not the raw database list *@
            @foreach (var pet in _filteredPets)
            {
                <div class="col-md-4 col-lg-3">
                    @* CARD COMPONENT: Represents a single entity in the grid *@
                    <div class="card h-100 border-0 shadow-hover overflow-hidden rounded-4">
                        <div class="position-relative">
                            <img src="@(pet.ImageUrl ?? "/images/pet-placeholder.png")"
                                 class="card-img-top"
                                 style="height: 250px; object-fit: cover;"
                                 alt="@pet.Name">
                            <span class="badge bg-white text-dark position-absolute top-0 end-0 m-3 shadow-sm rounded-pill">
                                @pet.Gender
                            </span>
                        </div>
                        <div class="card-body text-center">
                            <h5 class="fw-bold mb-1">@pet.Name</h5>
                            <p class="text-muted small mb-2">@pet.Breed</p>
                            <div class="d-flex justify-content-center gap-2 mb-3">
                                <span class="badge bg-light text-secondary border">@pet.Age yrs</span>
                                <span class="badge bg-light text-secondary border">@pet.Size</span>
                            </div>
                            @* ROUTING: Navigates to the details page, passing the ID parameter *@
                            <a href="pets/@pet.Id" class="btn btn-outline-primary rounded-pill w-100 stretched-link">
                                Meet @pet.Name
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    // Data Containers
    private IEnumerable<Pet> _allPets = new List<Pet>();
    private IEnumerable<Pet> _filteredPets = new List<Pet>();

    // SEARCH LOGIC: Property with backing field to trigger filtering logic on set
    private string _searchTerm = "";
    public string SearchTerm
    {
        get => _searchTerm;
        set
        {
            _searchTerm = value;
            FilterPets(); // LOGIC: Re-run filter whenever input changes
        }
    }

    protected override async Task OnInitializedAsync()
    {
        // DATA ACCESS: Fetch all available pets once to minimize DB hits
        var pets = await PetRepo.GetAllAsync();

        // LINQ: Initial filter to show only 'Available' pets (hiding Adopted ones)
        _allPets = pets.Where(p => p.Status == PetStatus.Available);
        _filteredPets = _allPets;
    }

    // ALGORITHM: In-memory search mechanism
    private void FilterPets()
    {
        if (string.IsNullOrWhiteSpace(SearchTerm))
        {
            _filteredPets = _allPets;
        }
        else
        {
            // LINQ: Case-insensitive search across multiple properties (Name OR Breed)
            _filteredPets = _allPets.Where(p =>
                p.Name.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                p.Breed.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase));
        }
    }
}