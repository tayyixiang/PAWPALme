@page "/my-appointments"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using PAWPALme.Models
@using PAWPALme.Data
@using PAWPALme.Repositories
@using PAWPALme.Enums
@attribute [Authorize]
@inject IAppointmentRepository ApptRepo
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthStateProvider

<div class="container mt-4">
    <h3>My Adoption Requests</h3>

    @if (appointments == null)
    {
        <p>Loading...</p>
    }
    else if (!appointments.Any())
    {
        <p>No appointments found.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var appt in appointments)
            {
                <div class="list-group-item">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Request for @appt.Pet?.Name</h5>
                        <small>@appt.AppointmentDate.ToShortDateString()</small>
                    </div>
                    <p class="mb-1">Shelter: @appt.Shelter?.Name</p>
                    <span class="badge @(appt.Status == AppointmentStatus.Confirmed ? "bg-success" : appt.Status == AppointmentStatus.Cancelled ? "bg-danger" : "bg-warning")">
                        @appt.Status
                    </span>
                </div>
            }
        </div>
    }
</div>

@code {
    private IEnumerable<Appointment>? appointments;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);

        if (user != null)
        {
            appointments = await ApptRepo.GetByUserIdAsync(user.Id);
        }
    }
}