@page "/my-appointments"
@using PAWPALme.Models
@using PAWPALme.Repositories
@using PAWPALme.Enums
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@inject IAppointmentRepository ApptRepo
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<PageTitle>My Appointments | PawPal</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            @* --- NEW HEADER AREA WITH LOGOUT BUTTON --- *@
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold mb-0">My Appointments</h3>

                @* This form triggers the Identity Logout endpoint *@
                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="/" />
                    <button type="submit" class="btn btn-outline-danger rounded-pill btn-sm px-3 fw-bold">
                        <i class="bi bi-box-arrow-right me-2"></i>Log Out
                    </button>
                </form>
            </div>
            @* ------------------------------------------ *@

            @if (_appointments == null)
            {
                <div class="spinner-border text-primary"></div>
            }
            else if (!_appointments.Any())
            {
                <div class="text-center py-5 text-muted glass-card">
                    <i class="bi bi-calendar-x fs-1 opacity-50"></i>
                    <p class="mt-3">You haven't booked any visits yet.</p>
                    <a href="pets" class="btn btn-primary rounded-pill mt-2">Browse Pets</a>
                </div>
            }
            else
            {
                @foreach (var appt in _appointments)
                {
                    <div class="glass-card mb-3 p-4 border-start border-5 @GetStatusBorder(appt.Status)">
                        <div class="d-flex justify-content-between align-items-center">

                            <div class="d-flex align-items-center gap-3">
                                <img src="@(appt.Pet?.ImageUrl ?? "/images/pet-placeholder.png")"
                                     class="rounded-circle" width="60" height="60" style="object-fit:cover" />
                                <div>
                                    <h5 class="fw-bold mb-1">@appt.Pet?.Name</h5>
                                    <div class="text-muted small">
                                        <i class="bi bi-shop me-1"></i> @(appt.Shelter?.Name ?? "Shelter")
                                    </div>
                                    <div class="text-muted small">
                                        <i class="bi bi-calendar-event me-1"></i> @appt.AppointmentDate.ToString("D") at @appt.AppointmentTime.ToString(@"hh\:mm")
                                    </div>
                                </div>
                            </div>

                            <div class="text-end">
                                <span class="badge rounded-pill px-3 py-2 @GetStatusBadge(appt.Status)">
                                    @appt.Status
                                </span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private IEnumerable<Appointment>? _appointments;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(c => c.Type == ClaimTypes.NameIdentifier)?.Value;

        if (userId != null)
        {
            _appointments = await ApptRepo.GetByUserIdAsync(userId);
        }
    }

    private string GetStatusBorder(AppointmentStatus status) => status switch
    {
        AppointmentStatus.Confirmed => "border-success",
        AppointmentStatus.Pending => "border-warning",
        AppointmentStatus.Denied => "border-danger",
        AppointmentStatus.Cancelled => "border-secondary",
        _ => "border-primary"
    };

    private string GetStatusBadge(AppointmentStatus status) => status switch
    {
        AppointmentStatus.Confirmed => "bg-success",
        AppointmentStatus.Pending => "bg-warning text-dark",
        AppointmentStatus.Denied => "bg-danger",
        AppointmentStatus.Cancelled => "bg-secondary",
        _ => "bg-primary"
    };
}