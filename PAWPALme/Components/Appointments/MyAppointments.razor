@page "/my-appointments"
@using PAWPALme.Models
@using PAWPALme.Repositories
@using PAWPALme.Enums
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@inject IAppointmentRepository ApptRepo
@inject AuthenticationStateProvider AuthStateProvider

@* SECURITY: 
    The [Authorize] attribute acts as a gatekeeper. 
    It ensures only logged-in users can view this dashboard. 
*@
@attribute [Authorize]

<PageTitle>My Appointments | PawPal</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            @* HEADER & LOGOUT: 
               We placed the logout button here for better UX (User Experience).
            *@
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold mb-0">My Appointments</h3>

                @* FORM POST for LOGOUT: 
                   We use a <form> instead of a simple <a> link for security.
                   Logging out changes the server state, so it requires a POST request 
                   with an Anti-Forgery token to prevent cross-site attacks.
                *@
                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />
                    @* ReturnUrl="/" tells the server to go to the Home page after logging out *@
                    <input type="hidden" name="ReturnUrl" value="/" />
                    <button type="submit" class="btn btn-outline-danger rounded-pill btn-sm px-3 fw-bold">
                        <i class="bi bi-box-arrow-right me-2"></i>Log Out
                    </button>
                </form>
            </div>

            @* STATE 1: LOADING 
               The data fetch happens asynchronously. We show a spinner while waiting.
            *@
            @if (_appointments == null)
            {
                <div class="spinner-border text-primary"></div>
            }
            @* STATE 2: EMPTY 
               Data loaded, but the list count is 0. We guide the user to browse pets.
            *@
            else if (!_appointments.Any())
            {
                <div class="text-center py-5 text-muted glass-card">
                    <i class="bi bi-calendar-x fs-1 opacity-50"></i>
                    <p class="mt-3">You haven't booked any visits yet.</p>
                    <a href="pets" class="btn btn-primary rounded-pill mt-2">Browse Pets</a>
                </div>
            }
            @* STATE 3: DATA DISPLAY 
               Loop through the results and create a card for each booking.
            *@
            else
            {
                @foreach (var appt in _appointments)
                {
                    @* DYNAMIC STYLING:
                       Note the function call '@GetStatusBorder(appt.Status)'.
                       This changes the border color (Green/Red/Yellow) based on the status
                       so the user gets instant visual feedback.
                    *@
                    <div class="glass-card mb-3 p-4 border-start border-5 @GetStatusBorder(appt.Status)">
                        <div class="d-flex justify-content-between align-items-center">

                            <div class="d-flex align-items-center gap-3">
                                @* Fallback image logic: If pet has no photo, show default placeholder *@
                                <img src="@(appt.Pet?.ImageUrl ?? "/images/pet-placeholder.png")"
                                     class="rounded-circle" width="60" height="60" style="object-fit:cover" />
                                <div>
                                    <h5 class="fw-bold mb-1">@appt.Pet?.Name</h5>
                                    <div class="text-muted small">
                                        <i class="bi bi-shop me-1"></i> @(appt.Shelter?.Name ?? "Shelter")
                                    </div>
                                    <div class="text-muted small">
                                        <i class="bi bi-calendar-event me-1"></i> @appt.AppointmentDate.ToString("D") at @appt.AppointmentTime.ToString(@"hh\:mm")
                                    </div>
                                </div>
                            </div>

                            <div class="text-end">
                                @* DYNAMIC BADGE: Changes background color based on status *@
                                <span class="badge rounded-pill px-3 py-2 @GetStatusBadge(appt.Status)">
                                    @appt.Status
                                </span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private IEnumerable<Appointment>? _appointments;

    protected override async Task OnInitializedAsync()
    {
        // 1. GET CURRENT USER ID:
        // We query the AuthenticationStateProvider to find out who is looking at this page.
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(c => c.Type == ClaimTypes.NameIdentifier)?.Value;

        // 2. FILTER DATA:
        // We pass that ID to the repository. The SQL query returns ONLY rows matching this specific User ID.
        if (userId != null)
        {
            _appointments = await ApptRepo.GetByUserIdAsync(userId);
        }
    }

    // HELPER METHOD: Switch Expression
    // Instead of writing a long if/else block inside the HTML, I use this C# function
    // to map the 'Enum' (Confirmed/Denied) to a CSS Class (border-success/border-danger).
    private string GetStatusBorder(AppointmentStatus status) => status switch
    {
        AppointmentStatus.Confirmed => "border-success",   // Green
        AppointmentStatus.Pending => "border-warning",     // Yellow
        AppointmentStatus.Denied => "border-danger",       // Red
        AppointmentStatus.Cancelled => "border-secondary", // Grey
        _ => "border-primary" // Default Blue
    };

    private string GetStatusBadge(AppointmentStatus status) => status switch
    {
        AppointmentStatus.Confirmed => "bg-success",
        AppointmentStatus.Pending => "bg-warning text-dark",
        AppointmentStatus.Denied => "bg-danger",
        AppointmentStatus.Cancelled => "bg-secondary",
        _ => "bg-primary"
    };
}