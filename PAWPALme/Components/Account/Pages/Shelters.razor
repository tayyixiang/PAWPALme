@page "/shelters"
@rendermode InteractiveServer
@using PAWPALme.Services
@using ShelterModel = PAWPALme.Models.Shelter
@inject ShelterService ShelterService

<PageTitle>Shelters</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Shelters</h2>
        <a class="btn btn-outline-primary" href="/auth">Shelter login / signup</a>
    </div>

    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-danger">@error</div>
    }
    else if (shelters is null)
    {
        <p><em>Loading...</em></p>
    }
    else if (shelters.Count == 0)
    {
        <div class="alert alert-info">No shelters registered yet.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var s in shelters)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-1">@s.Name</h5>

                            @if (!string.IsNullOrWhiteSpace(s.Address))
                            {
                                <div class="text-muted small mb-2">@s.Address</div>
                            }

                            @if (!string.IsNullOrWhiteSpace(s.Phone))
                            {
                                <div class="small"><strong>Phone:</strong> @s.Phone</div>
                            }

                            @if (!string.IsNullOrWhiteSpace(s.Description))
                            {
                                <div class="small mt-2 text-muted">@s.Description</div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<ShelterModel>? shelters;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            shelters = await ShelterService.GetSheltersAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
            shelters = new();
        }
    }
}
